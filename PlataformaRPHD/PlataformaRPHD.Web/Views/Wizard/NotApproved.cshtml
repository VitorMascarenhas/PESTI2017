@model IEnumerable<PlataformaRPHD.Web.ViewModels.WizardViewModel>

@{
    ViewBag.Title = "STICket - Wizards não aprovados";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Wizards</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Wizards não aprovados</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Wizards</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Criar Wizard", "CreateWizard", null, new { @class = "btn btn-primary btn-xs"})
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayName("Título")
        </th>
        <th>
            @Html.DisplayName("Criado por")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateBy.Name.FirstName)
        </td>
        <td>
            @Html.ActionLink("Visualizar", "ViewWizard", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Aprovar", "Approv", new { id = item.Id }, new { @class = "btn btn-white btn-sm" })
            @Html.ActionLink("Apagar", "Delete", new { id = item.Id }, new { @class = "btn btn-white btn-sm" })
        </td>
    </tr>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>



