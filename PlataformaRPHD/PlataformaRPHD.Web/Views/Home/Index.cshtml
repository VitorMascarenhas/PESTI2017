@model IEnumerable<PlataformaRPHD.Web.ViewModels.CategoryViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Página principal</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Página principal</strong>
            </li>
        </ol>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Index CategoryViewModel</h5>
                </div>
                <div class="ibox-content">


				    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

            @if (Model == null)
            {
            }
            else
            {
                foreach (var item in Model)
                {
                    <dd>
                        @Html.DisplayForModel("Id")
                    </dd>
                    <dt>
                        @Html.DisplayForModel(item.Id)
                    </dt>
                    <dd>
                        @Html.DisplayForModel("Nome")
                    </dd>
                    <dt>
                        @Html.DisplayForModel(item.Name)
                    </dt>
                    <dd>
                        @Html.DisplayForModel("Descrição")
                    </dd>
                    <dt>
                        @Html.DisplayForModel(item.Description)
                    </dt>
                }
            }
    </dl>
                </div>
            </div>
        </div>
    </div>
 </div>
