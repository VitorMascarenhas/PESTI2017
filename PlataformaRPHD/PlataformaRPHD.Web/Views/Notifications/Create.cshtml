@model PlataformaRPHD.Domain.Entities.Entities.Notification

@{
    ViewBag.Title = "Create";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Criar Notificação</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Lista de Notificações", "Index")
            </li>
            <li class="active">
                <strong>Criar Notificação</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Regressar à Lista", "Index", null, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Criar Notificação</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Serviço", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="service" name="ServiceId"></select>
                @Html.ValidationMessageFor(model => model.Service.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OpenSubject, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OpenSubject)
                @Html.ValidationMessageFor(model => model.OpenSubject)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CloseSubject, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CloseSubject)
                @Html.ValidationMessageFor(model => model.CloseSubject)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OpenBody, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OpenBody)
                @Html.ValidationMessageFor(model => model.OpenBody)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CloseBody, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CloseBody)
                @Html.ValidationMessageFor(model => model.CloseBody)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
				@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}

                </div>
            </div>
        </div>
    </div>
 </div>

 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/tinymce/tinymce.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                dataType: "json",
                type: "GET",
                url: "/DataSource/GetServices",
                success: function (data) {
                    $(data).each(function (i) {
                        $(".service").append('<option value="' + data[i].Id + '">' + data[i].Name + '</option>');
                    });
                }
            });
        });
    </script>
}
