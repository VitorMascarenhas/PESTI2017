@model PlataformaRPHD.Web.ViewModels.CreateRequestViewModel

@{
    ViewBag.Title = "STICket - Adicionar anexos";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h2>Registar pedido</h2>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm())
                    {
                        <div class="ibox-title">
                            <div class="ibox-tools">
                                <input type="file" id="files" name="files" multiple class="btn btn-primary btn-xs" />
                                @*@Html.ActionLink("Adicionar", "AddAttachment", null, new { @class = "btn btn-primary btn-xs" })*@
                            </div>
                        </div>
                        
                        <table class="table table-striped">
                            <tr>
                                <th>
                                    @Html.DisplayName("Nome do ficheiro")
                                </th>
                                <th>
                                    @Html.DisplayName("Tipo de ficheiro")
                                </th>
                                <th></th>
                            </tr>

                            @if (Model.attachments == null)
                            {
                            }
                            else
                            {
                                foreach (var item in Model.attachments)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @*@Html.DisplayFor(modelItem => item.FileType)*@
                                        </td>
                                        <td>
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-white btn-sm" })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-white btn-sm" })
                                        </td>
                                    </tr>
                                }
                            }

                        </table>
                        <div class="ibox-content">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @Html.ActionLink("Registar", "Create", "CreateRequest", new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Cancelar", "Index", "Home", new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
