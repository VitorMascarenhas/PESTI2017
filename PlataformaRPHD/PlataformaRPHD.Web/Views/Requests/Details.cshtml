@model PlataformaRPHD.Domain.Entities.Entities.Request

@{
    ViewBag.Title = "Details";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Detalhes do Pedido</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Lista de Pedidos", "Index")
            </li>
            <li class="active">
                <strong>Detalhes do Pedido<strong>
            </li>
        </ol>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h3>Detalhes do Pedido</h3>
                </div>
                <div class="ibox-content">


                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayName("Data do registo")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TimeOfRegistration)
                        </dd>

                        <dt>
                            @Html.DisplayName("Serviço")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Interactions.FirstOrDefault().service.Name)
                        </dd>

                        <dt>
                            @Html.DisplayName("Categoria")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Category.Name)
                        </dd>

                        <dt>
                            @Html.DisplayName("Título")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Title)
                        </dd>

                        <dt>
                            @Html.DisplayName("Descrição")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <dt>
                            @Html.DisplayName("Equipamento")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SourceComputer)
                        </dd>

                        <dt>
                            @Html.DisplayName("Contacto")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Contact)
                        </dd>

                        <dt>
                            @Html.DisplayName("Origem")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Origin.Name)
                        </dd>

                        <dt>
                            @Html.DisplayName("Impacto")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Impact.Name)
                        </dd>

                    </dl>

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayName("Título")
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model.Interactions)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.ActionLink("Detalhes", "InteractionDetails", "Interaction", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                </td>
                            </tr>
                        }

                    </table>



</div>
            </div>
        </div>
    </div>
 </div>













