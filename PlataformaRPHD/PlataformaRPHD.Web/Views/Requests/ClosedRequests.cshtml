@model IEnumerable<PlataformaRPHD.Domain.Entities.Entities.Request>

@{
    ViewBag.Title = "STICket - Os meus Pedidos Fechados";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Pedidos fechados</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Pedidos fechados</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista de pedidos fechados</h5>
                </div>
                <div class="ibox-content">

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayName("Data do registo")
        </th>
        <th>
            @Html.DisplayName("Título")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TimeOfRegistration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
            @if (item.SatisfactionSurvey == null)
            {
                @Html.ActionLink("Responder inquérito", "RequestSatisfaction", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
            }
        </td>
    </tr>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>



