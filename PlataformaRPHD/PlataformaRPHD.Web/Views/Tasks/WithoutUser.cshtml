@model IEnumerable<PlataformaRPHD.Domain.Entities.Entities.Interaction>

@{
    ViewBag.Title = "STICket - Tarefas por Transferir";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista de tarefas por transferir</h5>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayName("Título")
                            </th>
                            <th>
                                @Html.DisplayName("Data do registo")
                            </th>
                            <th>
                                @Html.DisplayName("Registado por")
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Request.TimeOfRegistration)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Request.Owner.Name.FirstName)
                                </td>
                                <td>
                                    @Html.ActionLink("Detalhes", "Details", new { id = item.Task.Id }, new { @class = "btn btn-primary btn-sm" })
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>



