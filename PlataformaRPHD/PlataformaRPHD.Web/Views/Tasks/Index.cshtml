@model IEnumerable<PlataformaRPHD.Web.ViewModels.InteractionViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Tarefas</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Lista de Tarefas</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Tarefas</h5>
                </div>
                <div class="ibox-content">

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayName("Título")
        </th>
        <th>
            @Html.DisplayName("Atribuido")
        </th>
        <th></th>
    </tr>
    @if (Model == null)
    {
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(Item => item.Title)
                </td>
                
                @if (item.Task.Owner == null)
                {
                    <td>
                        @Html.DisplayName("Por atribuir")
                    </td>
                }
                <td>
                    @Html.DisplayFor(Item => item.Task.Owner.Name.FirstName) @Html.DisplayFor(Item => item.Task.Owner.Name.LastName)
                </td>
                <td>
			        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                </td>
            </tr>
        }
    }

</table>

                </div>
            </div>
        </div>
    </div>
 </div>



