@model PlataformaRPHD.Web.ViewModels.InteractionViewModel

@{
    ViewBag.Title = "Details";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Detalhes da Tarefa</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Lista de Tarefas", "Index")
            </li>
            <li class="active">
                <strong>Detalhes da Tarefa</strong>
            </li>
        </ol>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalhes da Tarefa</h5>
                </div>
                <div class="ibox-content">


    <dl class="dl-horizontal">
    
        <dt>
            @Html.DisplayName("Registado por")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Request.Owner.Name.FirstName) @Html.DisplayFor(model => model.Request.Owner.Name.LastName)
        </dd>

        <dt>
            @Html.DisplayName("Hora do registo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Request.TimeOfRegistration)
        </dd>

        <dt>
            @Html.DisplayName("Origem")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Request.Origin.Name)
        </dd>

        <dt>
            @Html.DisplayName("Serviço")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.service.Name)
        </dd>

        <dt>
            @Html.DisplayName("Título")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayName("Descrição")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Request.Description)
        </dd>

        <dt>
            @Html.DisplayName("Impacto")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Request.Impact.Name)
        </dd>

        <dt>
            @Html.DisplayName("Atribuido a")
        </dt>

        @if (Model.Task.Owner == null)
        {
            <dd>
                @Html.DisplayName("Por atribuir") @Html.ActionLink("Atribuir Tarefa", "Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-white" })
            </dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.Task.Owner.Name.FirstName) @Html.DisplayFor(model => model.Task.Owner.Name.LastName) @Html.ActionLink("Transferir Tarefa", "Edit", new { id = Model.Id }, new { @class = "btn btn-white" })
            </dd>
        }
    
        <dt>
            @Html.DisplayName("Estado")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Task.status)
        </dd>

    </dl>
    
    @Html.ActionLink("Guardar alterações", "Index", null, new { @class = "btn btn-primary"})
    @Html.ActionLink("Regressar à Lista", "Index", null, new { @class = "btn btn-white" })

                </div>
            </div>
        </div>
    </div>
 </div>













